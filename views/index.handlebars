<div id="home">


  <div class="stocksContainer">

    <div class="row">
      <div class="col-8 offset-2">
        <div>
          <h1 id="currentUser">{{name}}</h1><br><br>
          <h3 id="currentUserId">ID: {{user_id}}</h3><br>
        </div>
        <div>
          <h3 class="investSubheading">Investing:</h3>
          <h4 id="investAmount">${{budget}}</h4><br>
        </div>
        <h3 class="subheading">Your Stocks:</h3>
        <hr>
        <div>
          {{#each positions}}
          <h3 class="stockSymbol">{{symbol}}</h3>
          <h5 class="numberofShares">Shares: {{quantity}}</h5>
          <button id="price{{symbol}}" class="button">Buy</button><br><br>
          <button id="sell{{symbol}}" class="button">Sell</button>
          <hr>
          {{/each}}
        </div>
         <label for="inputName">
          <h5>Add Stock</h5>
        </label>
        <input type="text" id="symbol" placeholder="Search...">

        <button id="tradeButton" class="button">Q</button>

      </div>
    </div>
  </div>


</div>

<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>


<script>

    $("#tradeButton").on("click", function (event) {
        event.preventDefault();

        var symbol = $("#symbol").val();
  
        $.ajax({
            url: "https://api.iextrading.com/1.0/stock/" + symbol + "/price",
            method: "GET",
            statusCode: {
                "404": function () {
                    location.href = "*";
                }
            }
        }).then(function (response) {
          console.log(response);
            location.href = "/stocks/" + symbol;
        });
    });
 
</script>